    chart: cert-manager
    helm:
      values: |
        config:
          email: system@fezinhadasorte.com
          domains:
            - www.fezinhadasorte.com
            - fezinhadasorte.com
          http01:
            ingressClass: kong
          ingress:
            class: kong
